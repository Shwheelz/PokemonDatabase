<p id="notice"><%= notice %></p>

<h1>Pokemon List</h1>

<table class="table">
  <thead>
    <tr>
      <th>Pokemon</th>
      <th>Type 1</th>
      <th>Type 2</th>
      <th>Shiny?</th>
      <th>Egg Moves</th>
      <th>Nature</th>
      <th>Ability</th>
      <th>Gender</th>
      <th>Pokeball</th>
      <th>Hiddenpower</th>
      <th>IVs</th>
      <th>EVs</th>
      <th>Item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-striped">
    <% @pokemons.each do |pokemon| %>
      <tr>
        <td><%= pokemon.species %></td>
        <td><%= pokemon.type1 %></td>
        <td><%= pokemon.type2 %></td>
        <td><%= pokemon.isShiny %></td>
        <td><%= pokemon.eggMoves %></td>
        <td><%= pokemon.nature %></td>
        <td><%= pokemon.ability %></td>
        <td><%= pokemon.gender %></td>
        <td><%= pokemon.pokeball %></td>
        <td><%= pokemon.hiddenPower %></td>
        <td><%= pokemon.ivs %></td>
        <td><%= pokemon.evs %></td>
        <td><%= pokemon.item %></td>
        <td><%= link_to 'Show', pokemon %></td>
        <td><%= link_to 'Edit', edit_pokemon_path(pokemon) %></td>
        <td><%= link_to 'Destroy', pokemon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

